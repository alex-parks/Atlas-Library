# üó°Ô∏è Blacksmith Atlas - Production Environment

# ===== APPLICATION SETTINGS =====
ATLAS_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# ===== DATABASE SETTINGS =====
ARANGO_HOST=arangodb
ARANGO_PORT=8529
ARANGO_DB=blacksmith_atlas
ARANGO_USER=atlas_user
ARANGO_PASSWORD=CHANGE_THIS_PASSWORD

# ===== ASSET LIBRARY =====
ASSET_LIBRARY_PATH=/app/assets
ASSET_CACHE_SIZE=5000
ASSET_PREVIEW_ENABLED=true

# ===== API SETTINGS =====
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["https://your-domain.com", "https://www.your-domain.com"]

# ===== FRONTEND SETTINGS =====
FRONTEND_PORT=3011
FRONTEND_HOST=0.0.0.0

# ===== SECURITY =====
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY
ALLOWED_HOSTS=["your-domain.com", "www.your-domain.com"]

# ===== LOGGING =====
LOG_FILE=logs/atlas.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=10

# ===== PERFORMANCE =====
WORKERS=4
MAX_CONNECTIONS=100
TIMEOUT=30 