# üó°Ô∏è Blacksmith Atlas - Development Environment

# ===== APPLICATION SETTINGS =====
ATLAS_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# ===== DATABASE SETTINGS =====
ARANGO_HOST=arangodb
ARANGO_PORT=8529
ARANGO_DB=blacksmith_atlas
ARANGO_USER=root
ARANGO_PASSWORD=atlas_password

# ===== ASSET LIBRARY =====
ASSET_LIBRARY_PATH=/app/assets
ASSET_CACHE_SIZE=1000
ASSET_PREVIEW_ENABLED=true

# ===== API SETTINGS =====
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3011", "http://127.0.0.1:3011"]

# ===== FRONTEND SETTINGS =====
FRONTEND_PORT=3011
FRONTEND_HOST=0.0.0.0

# ===== SECURITY =====
SECRET_KEY=dev-secret-key-change-in-production
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# ===== LOGGING =====
LOG_FILE=logs/atlas.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5 